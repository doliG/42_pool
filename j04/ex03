#include <stdio.h>

int ft_recursive_power(int nb, int power);

int main()
{
	printf("%d\n", ft_recursive_power(2, 2));
	printf("4 < expected\n\n");

	printf("%d\n", ft_recursive_power(2, -1));
	printf("0 < expected\n\n");

	printf("%d\n", ft_recursive_power(2, -1));
	printf("0 < expected\n\n");

	printf("%d\n", ft_recursive_power(2, 5));
	printf("32 < expected\n\n");

	printf("%d\n", ft_recursive_power(4, 8));
	printf("65536 < expected\n\n");
	return (0);
}

#include <stdio.h>

int ft_iterative_factorial(int nb);

int main()
{
	printf("%i\n", ft_iterative_factorial(-5));
	printf("0 < expected\n\n");

	printf("%i\n", ft_iterative_factorial(0));
	printf("1 < expected\n\n");

	printf("%i\n", ft_iterative_factorial(5));
	printf("120 < expected\n\n");

	printf("%i\n", ft_iterative_factorial(10));
	printf("3628800 < expected\n\n");

	printf("%i\n", ft_iterative_factorial(12));
	printf("479001600 < expected\n\n");

	return (0);
}
